{
  "name": "timer-and-stopwatch",
  "homepage": "https://christinesn.github.io/timer-and-stopwatch",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "react": "^16.8.6",
    "react-bootstrap": "^1.0.0-beta.8",
    "react-dom": "^16.8.6",
    "react-input-mask": "^2.0.4",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --coverage --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build"
  },
  "prettier": {
    "printWidth": 90
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "gh-pages": "^2.0.1",
    "prettier": "^1.17.1",
    "prop-types": "^15.7.2",
    "sinon": "^7.3.2"
  },
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/serviceWorker.js",
    "!src/index.js"
  ],
  "coverageReporters": [
    "lcov",
    "json",
    "text",
    "text-summary"
  ]
